<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/zone_background"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Zone"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editZoneNameEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/zone_name"
        android:textColor="@color/textPrimary"
        android:backgroundTint="@color/primaryGreen"
        android:inputType="textPersonName"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/editZoneFocusEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/zone_focus"
        android:textColor="@color/textPrimary"
        android:backgroundTint="@color/primaryGreen"
        android:inputType="text"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelEditButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@android:string/cancel"
            android:textColor="@color/textSecondary"
            android:padding="12dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/saveEditButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/save_edit"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>
