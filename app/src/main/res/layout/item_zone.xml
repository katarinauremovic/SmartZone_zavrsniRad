<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/zone_item_background"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/zoneNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zone_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/textPrimary"/>

    <TextView
        android:id="@+id/zoneFocusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zone_focus"
        android:textSize="16sp"
        android:textColor="@color/textSecondary"/>

    <TextView
        android:id="@+id/zoneCreatedDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zone_created_at"
        android:textSize="14sp"
        android:textColor="@color/textSecondary"/>
</LinearLayout>
